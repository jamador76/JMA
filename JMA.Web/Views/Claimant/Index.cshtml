@model JMA.Web.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Settlement Claim Form</h2>

@using (Html.BeginForm("Index", "Claimant", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Please Log In</legend>
        <span class="field-validation-error">@Model.Error</span>

        <p>Please enter your Claim ID and PIN code (see example below):</p>

        <div class="form-group">
            @Html.LabelFor(m => m.Claim8, "Claim ID:", new { @class = "req col-sm-2 control-label" })
            <div class="col-sm-2">
                @Html.TextBoxFor(m => m.Claim8, new { @class = "claim8 form-control", @required = "required" })
            </div>
            @Html.ValidationMessageFor(m => m.Claim8)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PIN, "PIN:", new { @class = "req col-sm-2 control-label" })
            <div class="col-sm-2">
                @Html.TextBoxFor(m => m.PIN, new { @class = "pin6 form-control", @required = "required" })
            </div>
            @Html.ValidationMessageFor(m => m.PIN)
        </div>

        <div class="form-group centertext" style="width: 20em; margin: .5em auto;">
            <button type="submit" style="width: 10em; padding: .75em; display: inline-block;" class="btn btn-primary">
                Log In
            </button>
        </div>

        <p class="req">Required</p>
        <p>If you do not have a Claim ID/PIN Code, please click <a class="here" href="@Url.Action("UnknownClaimForm", "Claimant")">here</a> to file a claim.</p>

        <hr />

    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/Scripts/jquery.maskedinput.min.js")
    @Scripts.Render("~/Scripts/login.js")
}